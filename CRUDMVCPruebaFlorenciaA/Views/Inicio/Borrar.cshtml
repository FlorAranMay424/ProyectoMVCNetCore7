@model CRUDMVCPruebaFlorenciaA.Models.Contacto
@{
    ViewData["Title"] = "Borrar Contaco";
}

<h1 class="text-center">
    Contacto con .NET 7 ( .Net Core MVC)
</h1>


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong> Borrar Usuarios </strong></h3>
            </div>

            <div class="card-body">
                <form asp-action="Borrar">

                    <input type="hidden" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" readonly />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Telfono" class="control-label"></label>
                        <input asp-for="Telfono" class="form-control" readonly />
                        <span asp-validation-for="Telfono" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Celular" class="control-label"></label>
                        <input asp-for="Celular" class="form-control" readonly />
                        <span asp-validation-for="Celular" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto"><i class="bi bi-eraser-fill"></i>Borrar Usuario</button>
                    </div>
                </form>

                <a asp-controller="Inicio" asp-action="Index">Volver</a>


            </div>
        </div>
    </div>
</div>






